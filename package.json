{
  "name": "chris.zarate.org",
  "private": true,
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": "last 2 versions"
          }
        }
      ]
    ]
  },
  "scripts": {
    "build": "npm run build-js; npm run build-css",
    "build-css": "node-sass --output-style compressed --source-map true --source-map-contents src/scss/main.scss --output public/build",
    "build-js": "webpack --progress --colors",
    "lint": "eslint src",
    "watch": "webpack-dev-server --progress --colors --content-base ./public"
  },
  "dependencies": {
    "glitch-canvas": "^1.0.2",
    "webpack": "^2.4.1"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^6.4.1",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-env": "^1.4.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "node-sass": "^4.5.2",
    "webpack-dev-server": "^2.4.2"
  }
}
