---
pagination:
  data: wp.tags
  size: 1
  alias: tag
permalink: "/tag/<%= tag.slug %>"
---
<%- include( '/header', { post: null, pageTitle: 'Tag' } ); %>
<%- include( '/list', { posts: tag.posts.map( i => wp.posts[ i ] ), title: `Tag: ${tag.name}` } ); %>
<%- include( '/footer', { showLinks: true } ); %>
