<article itemscope itemtype="http://schema.org/BlogPosting" class="<%= post.type %>">
	<header>
		<h1 itemprop="headline"><%- post.title.rendered %></h1>
	</header>
	<%- post.content.rendered.replace( /\s+style="[^"]+"/g, '' ) %>
	<footer>
		<p>
			<%- include( 'post-date', { post, dayjs } ); %>
			<% if ( post.source ) { %>
				<a href="<%= post.link %>">@<%= post.source %></a>
			<% } %>
		</p>
	</footer>
</article>
